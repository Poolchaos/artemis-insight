# Artemis Insight Environment Configuration
# Copy this file to .env and fill in the values

# ========================================
# APPLICATION SETTINGS
# ========================================
APP_NAME=Artemis Insight
APP_ENV=development
DEBUG=true

# ========================================
# MONGODB CONFIGURATION
# ========================================
# Root credentials for MongoDB admin access
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=change_this_secure_password

# Database name for application data
MONGO_DATABASE=artemis_insight

# ========================================
# MINIO CONFIGURATION (S3-Compatible Storage)
# ========================================
# MinIO root credentials (admin access)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_this_secure_password

# Bucket name for storing PDF documents
MINIO_BUCKET=artemis-insight

# ========================================
# JWT AUTHENTICATION
# ========================================
# Secret key for JWT signing (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=change_this_to_a_long_random_string_at_least_32_characters

# JWT configuration
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ========================================
# OPENAI API CONFIGURATION
# ========================================
# OpenAI API key for AI processing
OPENAI_API_KEY=sk-your-openai-api-key-here

# Model configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ========================================
# COST MANAGEMENT
# ========================================
# Monthly budget in South African Rand (R1000 = 1000)
MONTHLY_BUDGET_ZAR=1000

# ========================================
# FRONTEND CONFIGURATION
# ========================================
# API URL for frontend to connect to backend
# Development: http://localhost:8001
# Production: https://index.serelo.artemisinnovations.co.za/api
VITE_API_URL=http://localhost:8001
